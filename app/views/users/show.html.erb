<!DOCTYPE html>
<html>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

<main>
<div class="container px-5">
  <div class="row">
    <div class="col-md-3">
     
      <%= render 'sideuser', user: @user %>
      <%= render 'sidenew', book: @book %>

 </div>



  <div class="col-md-8 offset-md-1">
<h4>Books</h4>

<table>
  <thead>
    <tr>
      <th>  </th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
 <% @books.each do |book| %>
      <tr>
        <td><%= link_to user_path(book.user.id) do %>
          <%= image_tag book.user.get_profile_image(80,80) %>
            <% end %>
        </td>
         <td><%= link_to book_path(book) do %>
           <%= book.title %>
             <% end %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>




</main>
