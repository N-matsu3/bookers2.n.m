<!DOCTYPE html>
<html>
<div class="user">
  <h4>User info</h4>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p>name  <%= @user.name %></p>
  <p>introduction  <%= @user.introduction %></p>

<% if @user == current_user %>
  <%= link_to "Edit", "/users/#{@user.id}/edit"%>
<% end %>

</div>
<div class = "newbook">
  <h4>New Book</h4>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <div class ="new-book">Title</div>
  <%= f.text_field :title %>

  <div class ="new-book">Opinion</div>
  <%= f.text_area :body %>

<div class="button"><%= f.submit '  Create Book  '%></div>

<% end %>

</div>

<h4>Books</h4>

<table>
  <thead>
    <tr>
      <th>  </th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
 <% @books.each do |book| %>
      <tr>
        <td><%= image_tag @user.get_profile_image(100,100) %>
        </td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


</html>