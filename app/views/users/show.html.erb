<!DOCTYPE html>
<html>
<div class=user>
  <h1>User info</h1>
  <div><%= image_tag'sample-author1.jpg'%></div>
  <p>name</p>
  <p>introduction</p>

  <h2>New Book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @book do |f| %>
  <div class ="new-book">Title</div>
  <%= f.text_field :title %>

  <div class ="new-book">Opinion</div>
  <%= f.text_area :body %>

<div class="button"><%= f.submit '  Create Book  '%></div>

<% end %>

</div>
<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th>  </th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
      <tr>
        <td><%= image_tag'sample-author1.jpg'%>
            <!--%= link_to "Edit", "/users/#{user.id}/edit"%-->
        </td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Edit", "/books/#{book.id}/edit"%></td>
        <td><% if @book.user == current_user %>
            <%= link_to "Destroy",  destroy_book_path(@book), method: :delete, "data-confirm" => "Are you sure?"%>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


</html>