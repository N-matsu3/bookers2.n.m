<h2>User info</h2>
<%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>

  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName"%>

  <label for="inputImage">Image</label>
  <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>

  <label for="inputIntroduction">Introduction</label>
  <%= f.file_field :introduction, autofocus: true, id:"inputIntroduction" %>


  <%= f.submit "Update User" %>
<% end %>