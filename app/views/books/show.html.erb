<div class="flash">
  <%= flash[:notice] %>
</div>

<h1>New Book</h1>
  <%= form_with model: @newbook do |f| %>

    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %></br>
    <%= f.submit 'Create Book' %>
  <% end %>

  </div>
<h2>Book detail</h2>

<table>
  <thead>
    <tr>
      <th>  </th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= image_tag @user.get_profile_image(100,100) %>
        </td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <td><%= link_to "Edit", "/books/#{@book.id}/edit"%></td>
        <td><% if @book.user == current_user %>
            <%= link_to "Destroy",  book_path(@book), method: :delete, "data-confirm" => "Are you sure?"%>
            <% end %>
        </td>
      </tr>
  </tbody>
</table>
