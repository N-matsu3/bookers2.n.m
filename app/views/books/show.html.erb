<div class="flash">
  <%= flash[:notice] %>
</div>

<div class="user">
  <h4>User info</h4>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p>name  <%= @user.name %></p>
  <p>introduction  <%= @user.introduction %></p>

<% if @user == current_user %>
  <%= link_to "Edit", "/users/#{@user.id}/edit"%>
<% end %>

</div>

<div class = "newbook">
<h4>New Book</h4>
  <%= form_with model: @newbook do |f| %>

    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %></br>
    <%= f.submit 'Create Book' %>
  <% end %>

</div>

<h4>Book detail</h4>

<table>
  <thead>
    <tr>
      <th>  </th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
      <tr>
       <td><%= link_to user_path(@book.user.id) do %>
          <%= image_tag @book.user.get_profile_image(100,100) %></br>
          <%= @book.user.name%>
            <% end %>
        </td>
        <td><%= link_to @book_path do %>
          <%= @book.title %>
            <% end %>
        </td>
        <td><%= @book.body %></td>
        <td><%= link_to "Edit", "/books/#{@book.id}/edit"%></td>
        <td><% if @book.user == current_user %>
            <%= link_to "Destroy",  book_path(@book), method: :delete, "data-confirm" => "Are you sure?"%>
            <% end %>
        </td>
      </tr>
  </tbody>
</table>
