<!DOCTYPE html>
<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: edit_book_path(@book.id), method: :patch do |f| %>

<div class="flash">
  <%= flash[:notice] %>
</div>
<div>Title</div>
<%= f.text_field :title %>

  <div>Body</div>
  <%= f.text_area :body %>

 <div class="button"> <%= f.submit '  Update Book  ' %></div>

 <%= link_to 'Show', "/books/#{@book.id}" %>
 | <%= link_to 'Back', '/books' %>



<% end %>
